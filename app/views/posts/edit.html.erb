<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">書き直す</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <textarea name = "content"><%= @post.content %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>      
  </div>
</div>